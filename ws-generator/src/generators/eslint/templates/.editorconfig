root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf

[*.{js,jsx,json,ts,tsx,py,java,scala,dart,sh,md}]
insert_final_newline = true
indent_style = space
indent_size = 2
#potential issue with multiline strings
#trim_trailing_whitespace = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# yaml is special
[*.{yaml,yml}]
insert_final_newline = true
indent_style = space
indent_size = 2

# Set default charset to utf-8
[*.{js,py}]
charset = utf-8


